# Environment variables for the code documentation application
# LLM API Configuration
LLM_BASE_URL=https://api.sendthemmoney.com
LLM_API_KEY=ollama
LLM_INSTRUCT_MODEL=llama3.2:3b
LLM_REASONING_MODEL=deepseek-r1:latest
LLM_EMBEDDINGS_MODEL=nomic-embed-text:latest

# Application Configuration
OUTPUT_DIR=documentation_output
TEMP_DIR=/tmp/code_documentation
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=false
API_CORS_ORIGINS=*
API_RATE_LIMIT=100

# Database Configuration (for RAG)
VECTOR_DB_PATH=vector_db
